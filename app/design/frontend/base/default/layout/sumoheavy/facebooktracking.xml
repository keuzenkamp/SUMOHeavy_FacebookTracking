<layout version="0.1.0">

    <!-- Homepage -->
    <default>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_catchall" template="sumoheavy/facebooktracking/catchall.phtml"/>
        </reference>
    </default>

    <!-- Cart -->
    <checkout_cart_index>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_cart" template="sumoheavy/facebooktracking/cart.phtml"/>
        </reference>
    </checkout_cart_index>

    <!-- Category -->
    <catalog_category_default>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_category" template="sumoheavy/facebooktracking/category.phtml"/>
        </reference>
    </catalog_category_default>
    <catalog_category_layered>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_category" template="sumoheavy/facebooktracking/category.phtml"/>
        </reference>
    </catalog_category_layered>

    <!-- Checkout Success -->
    <checkout_onepage_success>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_checkout_success" template="sumoheavy/facebooktracking/checkout-success.phtml"/>
        </reference>
    </checkout_onepage_success>

    <!-- Product -->
    <catalog_product_view>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_product" template="sumoheavy/facebooktracking/product.phtml"/>
        </reference>
    </catalog_product_view>

    <!-- Registration -->
    <customer_account_index>
        <reference name="before_body_end">
            <block type="core/template" name="facebook_tracking_registration" template="sumoheavy/facebooktracking/registration.phtml"/>
        </reference>
    </customer_account_index>

</layout>
